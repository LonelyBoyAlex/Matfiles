@import "~/.cache/wal/colors-rofi-dark.rasi"

* {
  font: "JetBrainsMono Nerd Font 12";
  spacing: 0;
  padding: 10px;
  background:none;
}

window {
  width: 71em;
  height: 60%;
  border: 6px;
  border-color: @active-background;
 // padding: 0px;
  border-radius: 50px;
  background-color: transparent;
}

mainbox {
  orientation: vertical;
  children: [listview,inputbar];
  border-radius: 50px;
  background-color: transparent;
}

listview {
  orientation: horizontal;
  columns:8;
  lines: 1;
  spacing: 20;
  fixed-height: false;
  scrollbar: false;
  background-color: transparent;
}

element {
  padding: 0px;
  border: 2px;
  border-radius: 50px;
  border-color: @background;
  background-color: transparent;
  background:none;
  orientation: vertical;
  spacing: 0;
  children: [element-icon, element-text];
}

element-icon {
  size: 150px;
  border-radius:50px;
  background-color: transparent;
  background:none;
}

element-icon.selected {
  background-color:@background;
}

element.selected {
  border: 1px solid;
  border-color: @foreground;
  border-radius: 50px;
  box-shadow: 0 0 10px 2px ;
//  background:none;
//  background-color: transparent;
  shadow-color:@foreground;
}

element-text {
  horizontal-align: 0.5;
  background-color: transparent;
  background:none;
}
element-text.selected { 
  background-color:@selected-normal-background;
  color:@selected-urgent-foreground;
  text-shadow:2px 2px 2px;
}


/*****----- Inputbar -----*****/
inputbar {
    enabled:                     true;
    expand:false;
    width:40%;
    height : 20px;
    border-radius:               60px;
    background-color:            transparent;
    text-color:                  @foreground;
    children:["dummy","textbox-prompt-colon", "entry" ,"dummy2"];
}
textbox-prompt-colon {
    enabled:                     true;
    expand:                      false;
    str:                         "ï€‚";
    background-color:            @active-background;
    text-color:                  @foreground;
    border-radius: 50px 0px 0px 50px;
    margin:0px;
    padding:10px;
}
entry {
    enabled:                     true;
    background-color:            @active-background;
    text-color:                  @foreground;
    border-radius: 0px 50px 50px 0px;
    margin:0px;
    padding:10px;
    cursor:                      text;
    placeholder:                 "Search";
    placeholder-color:           inherit;
}

dummy { 
  width:10%;
  expand:true;
  background-color:inherit;
}
dummy2 { 
  width:10%;
  expand:true;
  background-color:inherit;
}

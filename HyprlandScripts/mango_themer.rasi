@import "~/.cache/wal/colors-rofi-dark.rasi"

* {
  font: "JetBrainsMono Nerd Font 10";
  spacing: 0;
  padding: 0px;
  //background-color:transparent;
  //background:none;
  colu:6;
}

window {
  width: calc(100%);
  height: calc(45%);
  border: none;
 // border-color: @foreground;
 // padding: 0px;
 // border-radius:0px;
  border-radius:12px;
  //background-color:@selected-normal-background;
  background-color:#00000001;
}

mainbox {
  orientation: vertical;
  children: [listview,inputbar];
  border-radius: 0px;
  background-color:transparent;
  padding:0px;
  margin:0px;
}

listview {
  orientation: horizontal;
  columns: @colu;
  lines: 1;
  spacing: 20;
  fixed-height: false;
  fixed-columns:true;
  scrollbar: false;
  background-color:transparent;
  background:none;
  expand: true;
}

element {
  padding:0px 0px 0px 0px;
  border-radius: 12px;
  orientation: vertical;
  spacing: 0;
  vertical-align: 0.5;
  horizontal-align: 0.5;
  children: [element-icon, element-text];
  background-color:transparent;
  background:none;
}

element.selected {
  border: 6px solid;
//  border-color: @foreground;
//  background-color: @selected-normal-background;
  border-radius: 12px;
  box-shadow: 0px 10px 10px 2px ;
  shadow-color:@foreground;
  border-color:@selected-active-background;
}

element-icon {
  size: 300px;
  padding:0px;
  margin:0px;
  border: none;
  border-radius:12px;
  //background-color:transparent;
  background:none;
  vertical-align: 0;
  background-color:@selected-normal-background;
}

element-text {
  horizontal-align: 0.5;
  color:@foreground;
  padding:16px;
  background-color:@normal-background;
}
element-text.selected { 
  background-color:@selected-active-background;
  color:@background;
  text-shadow:2px 2px 2px;
  font-size:1.5em;
  font-weight:900;
}



/*****----- Inputbar -----*****/
inputbar {
    enabled:                     true;
    expand:false;
    spacing:                     20px;
    padding: 15px;
    width:40%;
    height : 20px;
    border-radius:               60px;
    background-color:            transparent;
    //background-color:            @normal-background;
    text-color:                  @foreground;
    children:                    ["dummy","realbar", "dummy2"];
}
realbar {
    enabled:                     true;
    expand:false;
    spacing:                     0px;
    padding: 15px;
    width:40%;
    height : 20px;
    orientation:horizontal;
    border-radius:               12px;
    //background-color:            transparent;
    background-color:            @normal-background;
    text-color:                  @foreground;
    children:                    ["textbox-prompt-colon", "entry"];
}
textbox-prompt-colon {
    enabled:                     true;
    expand:                      false;
    str:                         " ï€‚ ";
    background-color:            inherit;
    text-color:                  inherit;
}
entry {
    enabled:                     true;
    background-color:            inherit;
    text-color:                  inherit;
    cursor:                      text;
    placeholder:                 "Search";
    placeholder-color:           inherit;
}

dummy { 
    expand:true;
    background-color:            transparent;
}
dummy2 { 
    expand:true;
    background-color:            transparent;
}

#!/bin/bash

# Check if Eww is running
if pgrep -x eww >/dev/null; then
    eww reload
fi

# Open your eww windows/widgets
eww open dock 
eww open toppanel 
eww open botpanel
eww open rightpanel
eww open barcorner-leftbot
eww open barcorner-lefttop
eww open barcorner-rightbot
eww open barcorner-righttop

{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "control-center-layer": "top",
  "layer-shell": true,
  //"cssPriority": "application",
  "cssPriority": "user",
  //"control-center-margin-top": 14,
  //"control-center-margin-bottom": 20,
  //"control-center-margin-right": 20,
  //"control-center-margin-left": 0,
  "notification-2fa-action": true,
  "notification-inline-replies": true,
  "notification-icon-size": 32,
  "notification-body-image-height": 100,
  "notification-body-image-width": 100,
  "notification-window-width": 400,
  "notification-window-height": 250,
  "ignore-gtk-theme": false,    
  "timeout": 10,
  "timeout-low": 4,
  "timeout-critical": 0,
  //"fit-to-screen": false,
  "fit-to-screen": true,
  //"control-center-width": 400,
  //"control-center-height": 200,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": true,
  "hide-on-action": true,
  "script-fail-notify": true,
  "widgets": [
    "title",
    "notifications",
    "dnd",
    "buttons-grid",
    "mpris",
    "volume",
    "backlight"
    ],
    "widget-config": {
      "title": {
        "text": "Notifications",
        "clear-all-button": true,
        "button-text": " "
      },
      "dnd": {
        "text": "Do Not Disturb"
      },
      "label": {
        "max-lines": 1,
        "text": "Notification"
      },
      "mpris": {
        "image-size": 50,
        "image-radius": 0
      },
      "backlight": {
        "label": "󰃟",
        "device": "amdgpu_bl2",
        "subsystem": "backlight"
      },
      "volume": {
        "label": "󰕾"
      },
      "buttons-grid": {
        "actions": [
          {
            "label": "",
            "command": "hyprlock"
          },
          {
            "label": "󰝟",
            "command": "pactl set-sink-mute @DEFAULT_SINK@ toggle"
          },
          {
            "label": "󰂯",
            "command": "blueman-manager"
          },
          {
            "label": "",
            "command": "bash -c pidof wlogout >/dev/null && killall wlogout || wlogout --buttons-per-row 6 -C ~/.config/wlogout/styletry.css"
          },
          {
            "label": "󰀝",
            "command": "bash -c nmcli radio all off || nmcli radio all on"
          },
          {
            "label": "󰹑",
            "command": "bash -c HyprlandScripts/hyprofishot.sh"
          }
        ]
      }
    }
}

# Default swaylock config

# Appearance
color=000000                 # background color (black)
inside-color=222222          # inside circle
inside-clear-color=005577    # inside circle when cleared
inside-ver-color=0077BB      # inside circle when verifying password
inside-wrong-color=BB0000    # inside circle when wrong password

ring-color=444444            # outer ring
ring-clear-color=3399FF
ring-ver-color=33BBFF
ring-wrong-color=FF3333

key-hl-color=FFFFFF          # key highlight
bs-hl-color=FF3333           # backspace highlight

separator-color=00000000     # hide separator

text-color=FFFFFF            # text while typing
text-clear-color=FFFFFF
text-ver-color=FFFFFF
text-wrong-color=FFFFFF

# Indicator
indicator-idle-visible=yes
indicator-caps-lock=yes
indicator-radius=100
indicator-thickness=10

# Behavior
show-failed-attempts=yes
show-keyboard-layout=yes
daemonize


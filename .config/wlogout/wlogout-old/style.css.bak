/* Specific button styles */
#lock, #logout, #suspend, #shutdown, #hibernate, #reboot {
    background-size: 25%; 
    background-repeat: no-repeat;
    padding: 2em; /* Space for icons */
    margin: 2em; /* Space between buttons */
    background-position: center 38%; /* Position icon for all buttons */
}

#lock {
    background-image: url("$HOME/.config/wlogout/icons/lock_#B0B4E7.png"),
    url("/usr/share/wlogout/icons/lock.png"), 
    url("/usr/local/share/wlogout/icons/lock.png");
}


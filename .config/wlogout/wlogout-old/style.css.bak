/* Import the Wal colors file */
@import url("/home/papa/.cache/wal/colors-waybar.css");

* {
    background-color: transparent;
    font-size: 16px; /* Set a default font size */
    font-family: hermit; /* Use Hurmit font */
}


button {
    color: @foreground; /* White text for contrast */
    /* background: linear-gradient(135deg, #4A4E69, #9A8C98);     */
    background: @background;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3); /* Increase shadow on hover */
    border: 1px solid white;
    border-radius: 12px; /* Slightly more rounded corners */
    padding: 12px 20px; /* Add some padding */
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2); /* Soft shadow for depth */
    animation: fadeIn 0.5s ease-out; /* Apply fade-in animation */
    transition: background 0.3s ease; /* Smooth transitions */
}


button:hover {
    background: rgba(25, 25, 25, 0.2); /* Light hover effect */
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3); /* Increase shadow on hover */
    border:none;
}

button:focus {
    outline: none; /* Remove default outline */
    background: rgba(22, 22, 22, 0.2); /* Light hover effect */
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3); /* Increase shadow on hover */
    animation: scaleUp 1s ease; /* Scale effect on focus */
    border:6px inset white;
}


